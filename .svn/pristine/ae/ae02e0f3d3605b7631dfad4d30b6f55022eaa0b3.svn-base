				TradModel from_trad = new TradModel();
				TradModel to_trad = new TradModel();
				int rel = 0;
				//目标卡
				if(cardServcie.TradCardMoneys(trad_money, trad_to.getText().trim(),4)){
					to_trad.setCard_id(trad_to.getText().trim());
