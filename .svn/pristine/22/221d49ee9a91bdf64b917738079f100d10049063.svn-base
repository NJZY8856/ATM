							from_trad.setAmount(trad_money);
							from_trad.setTrad_type(3);//交易类型：01存款，02取款，03转出，04转入
							if(tradService.addTrad(from_trad)){
								rel = 1;
							}
						}
					}
				}
				if(rel == 1){
					panel.setVisible(false);label_warn.setVisible(false);
